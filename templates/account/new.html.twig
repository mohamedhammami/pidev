                 <li class="breadcrumb-item text-white opacity-75">Nouveau compte</li>
                 <!--end::Item-->
             </ul>
         </div>

     </div>
 {% endblock %}
{% block body %}
    <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xxl">
        <div class="content flex-row-fluid" id="kt_content">
            <div class="card">

                <h5 class="fs-2hx text-dark mb-5" style="text-align: center!important;margin-top: 20px; text-transform: uppercase; float: left">
                    Formulaire de cr√©ation :
                </h5>

                <div class="card-header border-0 pt-6">
                    <div class="card-title">

                    </div>
                </div>

                <div class="card-body pt-0" id="webbinaire">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-12 ">
                            <div class="mb-3">
                                <label class="form-label" style="margin-bottom: 10px !important;">Montant<span class="text-danger"></span></label>
                                {{ form_widget(form.Balance) }}
                                <div class="form-error" style="color: red">
                                    {{ form_errors(form.Balance) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 "  style="margin-top: 15px!important;">
                            <div class="mb-3">
                                <label class="form-label" style="margin-bottom: 10px !important;">RIB<span class="text-danger">*</span></label>
                                {{ form_widget(form.rib) }}
                                <div class="form-error" style="color: red">
                                    {{ form_errors(form.rib) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 "  style="margin-top: 15px!important;">
                            <div class="mb-3">
                                <label class="form-label" style="margin-bottom: 10px !important;">Type du compte<span class="text-danger">*</span></label>
                                {{ form_widget(form.type) }}
                                <div class="form-error" style="color: red">
                                    {{ form_errors(form.type) }}
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-lg-12">
                        <div style="float: right" >
                            <button id="btnn" type="submit" class="btn btn btn-primary" style="margin-top: 5px"> Ajouter</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>

{% endblock %}
