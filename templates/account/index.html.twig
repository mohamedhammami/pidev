{% extends 'base.html.twig' %}

{% block title %}Account index{% endblock %}

{% block body %}
    <h1>Account index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Balance</th>
                <th>Rib</th>
                <th>OpeningDate</th>
                <th>IsClosed</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.Balance }}</td>
                <td>{{ account.rib }}</td>
                <td>{{ account.openingDate ? account.openingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ account.isClosed ? 'Yes' : 'No' }}</td>
                <td>{{ account.type }}</td>
                <td>
                    <a href="{{ path('app_account_show', {'id': account.id}) }}">show</a>
                    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_account_new') }}">Create new</a>
{% endblock %}
